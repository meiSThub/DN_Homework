<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2">

        <TableRow>


            <Button
                android:id="@+id/roundsrcin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="圆角"/>

            <Button
                android:id="@+id/invertsrcin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="倒影图像"/>
        </TableRow>

        <TableRow>


            <Button
                android:id="@+id/eraserview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="橡皮擦"/>


            <Button
                android:id="@+id/guaguaview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="刮刮卡"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/roundsrcatop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="圆角"/>

            <Button
                android:id="@+id/invertsrcatop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="倒影图像"/>
        </TableRow>
    </TableLayout>


    <com.mei.test.ui.xfermode.widget.RoundImageView_SRCIN
        android:id="@+id/roundsrcin_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.mei.test.ui.xfermode.widget.InvertedImageView_SRCIN
        android:id="@+id/invertsrcin_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.mei.test.ui.xfermode.widget.EraserView_SRCOUT
        android:id="@+id/eraserview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.mei.test.ui.xfermode.widget.GuaGuaCardView_SRCOUT
        android:id="@+id/guaguaview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.mei.test.ui.xfermode.widget.RoundImageView_SRCATOP
        android:id="@+id/roundsrcatop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.mei.test.ui.xfermode.widget.InvertedImageView_SRCATOP
        android:id="@+id/invertsrcatop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>
